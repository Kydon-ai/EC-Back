# 服务器配置
PORT=3000
NODE_ENV=development

# MongoDB配置
MONGO_URI=mongodb://localhost:27017/ec-backend

# 安全配置
JWT_SECRET=ec_backend_secret_key_for_development_only
JWT_EXPIRES_IN=7d

# LLM API配置（用于实际部署时）
# LLM_API_KEY=your_llm_api_key
# LLM_API_ENDPOINT=https://api.example.com/v1/chat/completions

# RAG服务配置
# EMBEDDING_API_KEY=your_embedding_api_key
# EMBEDDING_API_ENDPOINT=https://api.example.com/v1/embeddings

# 日志级别
LOG_LEVEL=info